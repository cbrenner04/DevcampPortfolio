<div class="col-lg-4">
  <div class="card" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(image: portfolio_item.thumb_image, type: 'thumb'), width: "100%" %>
    <p class="card-text">
      <span><%= link_to portfolio_item.title, portfolio_path(portfolio_item) %></span>
      <span><%= portfolio_item.subtitle %></span>
    </p>
  </div>
</div>
