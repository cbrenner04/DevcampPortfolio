      <div>
        <%= link_to topic.title, topic_path(topic) %>
      </div>
    <% end %>
  </div>

  <div class="sidebar-module">
    <h4>Elsewhere</h4>
    <ul class="list-unstyled social-link list-inline">
      <li>
        <%= link_to "https://github.com/cbrenner04", target: "_blank" do %>
          <%= fa_icon "github-square" %>
        <% end %>
      </li>
      <li>
        <%= link_to "https://linkedin.com/in/christopher-brenner-mph-b3a12427", target: "_blank" do %>
          <%= fa_icon "linkedin-square" %>
        <% end %>
      </li>
      <li>
        <%= link_to "https://twitter.com/cbrenner265", target: "_blank" do %>
          <%= fa_icon "twitter-square" %>
        <% end %>
