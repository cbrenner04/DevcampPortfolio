<div class="col-sm-8 blog-main">
  <h1>New topic</h1>

  <%= form_for @topic do |f| %>
    <% if @topic.errors.any? %>
      <% @topic.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
    <% end %>

    <div class="form-group">
      <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
